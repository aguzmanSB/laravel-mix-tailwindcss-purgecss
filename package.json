{
  "name": "laravel-mix-tailwindcss",
  "version": "1.0.0",
  "description": "Boilerplate with Laravel Mix and TailwindCSS",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --config=node_modules/laravel-mix/setup/webpack.config.js --progress --hide-modules",
    "watch": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --config=node_modules/laravel-mix/setup/webpack.config.js --progress --hide-modules --watch",
    "watch:prod": "cross-env NODE_ENV=production node_modules/webpack/bin/webpack.js --config=node_modules/laravel-mix/setup/webpack.config.js --progress --hide-modules --watch",
    "hot": "cross-env NODE_ENV=development node_modules/webpack-dev-server/bin/webpack-dev-server.js --config=node_modules/laravel-mix/setup/webpack.config.js --inline --hot",
    "production": "cross-env NODE_ENV=production node_modules/webpack/bin/webpack.js --config=node_modules/laravel-mix/setup/webpack.config.js --no-progress --hide-modules"
  },
  "author": {
    "name": "Tomasz Bujnowicz",
    "email": "hi@tomaszbujnowicz.com",
    "url": "https://www.tomaszbujnowicz.com"
  },
  "license": "MIT",
  "devDependencies": {
    "browser-sync": "^2.26.12",
    "browser-sync-webpack-plugin": "^2.2.2",
    "cross-env": "^7.0.2",
    "eslint": "^7.11.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-vue": "^7.0.1",
    "laravel-mix": "^5.0.7",
    "laravel-mix-eslint": "^0.1.3",
    "postcss-import": "^12.0.1",
    "postcss-preset-env": "^6.7.0",
    "tailwindcss": "^1.9.1",
    "vue-template-compiler": "^2.6.12"
  }
}
